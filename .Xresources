! URxvt Settings ------------------------------------------------------------
URxvt*dynamicColors: on
URxvt*internalBorder: 7
URxvt*iso14755: false
URxvt*depth: 30
URxvt*scrollBar: false
URxvt*cursorBlink: true
URxvt*cursorUnderline: false
URxvt*savelines: 1024
URxvt*shading: 60
URXvt*geometry: 80x30
URxvt*letterSpace: 1

! font settings --------------------------------------------------------------

Xft.autohint: 1
Xft.antialias: 1
Xft.hinting: 1
Xft.hintstyle: hintfull
!Xft.dpi: 96
Xft.rgba: rgb
Xft.lcdfilter: lcddefault


! URxvt Fonts ----------------------------------------------------------------
URxvt*font:                 xft:berry
! DejaVuSansMono:regular:size=8
URxvt*imFont:               xft:berry
! DejaVuSansMono:regular:size=8
URxvt*boldFont:             xft:berry:bold
! DejaVuSansMono:bold:size=8
URxvt*italicFont:           xft:berry:italic
! DejaVuSansMono-Oblique:size=8
URxvt*boldItalicFont:       xft:berry:bolditalic
!DejaVuSansMono-Oblique:bold:size=8


! -------- BASE -------- $
  *foreground: 	 #9BBBC6
  *background: 	 #1C1C23
  *cursorColor:  #1E828C
  *colorUL:      #1E828C
! ---------------------- $

